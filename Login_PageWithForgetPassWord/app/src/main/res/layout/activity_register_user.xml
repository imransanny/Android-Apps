<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MetaMaza"
        android:textSize="50sp"
        android:textColor="#E81212" android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/banner_descrioption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Awesome App"
        android:textSize="20sp"
        android:textColor="#256CE1" android:textStyle="bold"
        android:gravity="center"
        />

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Name_edit_text_register_id"
        android:hint="Full Name"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Age_edit_text_register_id"
        android:layout_marginTop="20dp"
        android:hint="Age"
        />
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Email_edit_text_register_id"
        android:layout_marginTop="20dp"
        android:hint="Email"
        />
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Password_edit_text_register_id"
        android:layout_marginTop="20dp"
        android:hint="Password"
        />

    <Button
        android:id="@+id/Register_user"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#48B366"
        android:text="Register user"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <ProgressBar
        android:id="@+id/Progressbar_registeruser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_gravity="center"

        />




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/contact_list_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact List"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
       android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/image_view_id"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/contact_list_id"
        android:background="#E4E4E2"
        android:scaleType="centerCrop" />

    <EditText
        android:id="@+id/name_display_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_id"
        android:layout_alignLeft="@+id/image_view_id"
        android:layout_alignRight="@+id/image_view_id"

        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email_display_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_display_id"
        android:layout_alignLeft="@+id/name_display_id"
        android:layout_alignRight="@+id/name_display_id"

        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/phone_home_display_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_display_id"
        android:layout_alignLeft="@+id/email_display_id"
        android:layout_alignRight="@+id/email_display_id" />

    <EditText
        android:id="@+id/phone_office_display_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_home_display_id"
        android:layout_alignLeft="@+id/phone_home_display_id"
        android:layout_alignRight="@+id/phone_home_display_id" />




</RelativeLayout>